
<h1>Sign Up!</h1>

<%= form_for @user do |f| %>
  <div class="form-group">
    <%= f.email_field :email ,:value => (@user.errors.full_messages_for(:email).first || @user.email), :html =>{:class => " form-control field_with_errors" },  :placeholder => "Enter Your Email", :size => 30 %>
  </div>
  <div class="form-group">
    <%= f.password_field :password, :value => @user.errors.full_messages_for(:password).first, :html => {:class => " form-control field_with_errors"}, :placeholder => "Enter Your Password", :size => 30 %>
  </div>
  <%= f.submit "Create Your Account" %>
  
<% end %>

